generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(STUDENT)
  studentID String?  @unique
  department String?  // BS English, BS Computer Science, etc.
  teamID    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  team     Team?  @relation("UserTeam", fields: [teamID], references: [id])
  coachedTeams Team[] @relation("TeamCoach")
  posts    Post[]
  events   Event[]
  teams    Team[] @relation("TeamCreator")
  participations EventParticipant[]

  @@map("users")
}

model Team {
  id        String   @id @default(cuid())
  name      String
  sport     String
  department String   // All team members from same department
  coachId   String?  // Assigned coach (optional)
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  creator User   @relation("TeamCreator", fields: [createdBy], references: [id])
  coach   User?  @relation("TeamCoach", fields: [coachId], references: [id])
  members User[] @relation("UserTeam")
  matchesAsTeamA Event[] @relation("MatchTeamA")
  matchesAsTeamB Event[] @relation("MatchTeamB")

  @@map("teams")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  sport       String
  type        EventType @default(TOURNAMENT)  // TOURNAMENT, MATCH, PRACTICE
  location    String?  // Venue/location
  teamAID     String?  // First team (for matches)
  teamBID     String?  // Second team (for matches)
  scoreA       Int?     // Team A score (for matches)
  scoreB       Int?     // Team B score (for matches)
  status      EventStatus @default(UPCOMING)  // UPCOMING, ONGOING, COMPLETED, CANCELLED
  imageURL    String?  // Event image
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creator User @relation(fields: [createdBy], references: [id])
  participants EventParticipant[]
  teamA Team? @relation("MatchTeamA", fields: [teamAID], references: [id])
  teamB Team? @relation("MatchTeamB", fields: [teamBID], references: [id])

  @@map("events")
}

model EventParticipant {
  id        String   @id @default(cuid())
  eventId   String
  userId     String
  joinedAt   DateTime @default(now())

  // Relations
  event Event @relation(fields: [eventId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([eventId, userId])
  @@map("event_participants")
}

model Post {
  id        String   @id @default(cuid())
  userID    String
  content   String
  imageURL  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userID], references: [id])

  @@map("posts")
}

enum Role {
  STUDENT
  ADMIN
}

enum EventType {
  TOURNAMENT
  MATCH
  PRACTICE
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}